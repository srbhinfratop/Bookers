<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-container">
  <p class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul class="errors-list">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>

<% end %>

<span><%= link_to 'Show', book_path(@book.id) %></span>
<span><%= link_to 'Back', '/books' %></span>