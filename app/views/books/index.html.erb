<div class="text-success">
  <%= flash[:notice] %>
</div>

<h2>Books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th> </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <span class="actions-link"><%= link_to 'Show', book_path(book.id) %></span>
      <span class="actions-link"><%= link_to 'Edit', edit_book_path(book.id) %></span>
      <span class="actions-link">
        <%= link_to 'Destroy',
            book_path(book.id),
            method: :delete,
            "data-confirm" => "Are you sure?"
        %>
      </span>
    </td>
  </tr>
  <% end %>
</table>

<h3>New Book</h3>


<% if @book.errors.any? %>
<div class="error-container">
  <p class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul class="errors-list">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="form-element">
    <h4 class="label">Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form-element">
    <h4 class="label">Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="form-element">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>